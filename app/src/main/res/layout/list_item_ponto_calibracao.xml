<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutHeaderPontos"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/textViewIndice"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.1"
        android:textStyle="bold"
        style="@style/RowTabela"/>
    <EditText
        android:id="@+id/editTextDigital"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.35"
        android:inputType="number"
        style="@style/RowTabela"/>
    <EditText
        android:id="@+id/editTextCalibracao"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.45"
        android:inputType="numberDecimal"
        style="@style/RowTabela"/>
    <ImageButton
        android:id="@+id/removePontoButton"
        style="@style/SmallButton"
        android:layout_width="0dp"
        android:layout_weight="0.1"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_delete_forever_24dp"/>
</LinearLayout>