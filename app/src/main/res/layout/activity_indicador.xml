<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/indicacao_principal_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:theme="@style/HugeBlackText"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            tools:text="1300000" />

        <Switch
            android:id="@+id/switchAquisicaoAutomatica"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:checked="false"
            android:layout_centerHorizontal="true"
            android:onClick="aquisicaoAutomaticaOnClick"
            android:layout_below="@id/indicacao_principal_text"
            android:text="@string/aquisicao_automatica" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <Button
            style="@style/Button"
            android:layout_margin="4dp"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/zero"
            android:onClick="zeroButtonOnClick"/>

    </LinearLayout>

</RelativeLayout>
